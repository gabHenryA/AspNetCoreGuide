@model PersonWithProductWrapperModel

<!DOCTYPE html>
<html>
	<head>
		<title>Person and Product</title>
		<meta charset="utf-8"/>
		<link href="~/StyleSheet.css" rel="stylesheet"/>
	</head>

	<body>
		<div class="page-content">
			<h1>Person and Product</h1>

			<div class="box w-50">
				<h3>Person</h3>
				<table class="table w-50">
					<tbody>
						<tr>
							<td>Person Name</td>
							<td>@Model.PersonData.Name</td>
						</tr>
						<tr>
							<td>Person Gender</td>
							<td>@Model.PersonData.PersonGender</td>
						</tr>
						<tr>
							<td>Person Date Of Birth</td>
							<td>@Model.PersonData.DateOfBirth.Value.ToString("MM/dd/yyyy")</td>
						</tr>
					</tbody>
				</table>
			</div>

			<div class="box w-50">
				<h3>Product</h3>
				<table class="table w-50">
					<tbody>
						<tr>
							<td>Product Id</td>
							<td>@Model.ProductData.ProductId</td>
						</tr>
						<tr>
							<td>Product Name</td>
							<td>@Model.ProductData.ProductName</td>
						</tr>
					</tbody>
				</table>
			</div>

			<a href="/home">Back to home</a>
		</div>
	</body>
</html>